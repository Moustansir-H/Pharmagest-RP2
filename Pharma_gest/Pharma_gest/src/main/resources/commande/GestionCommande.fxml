<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mcci.businessschool.bts.sio.slam.pharmagest.commande.controleur.ConfirmationCommandeControleur">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="lblTitre" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Confirmation des commandes automatiques" />

    <Separator />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="btnConfirmerTout" onAction="#confirmerToutesLesCommandes" text="Confirmer toutes les commandes" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnRetour" onAction="#retourGestionCommandes" text="Retour à la gestion des commandes" />
    </HBox>

    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Commandes en attente de confirmation" />
            <TableView fx:id="tableCommandes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colonneId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colonneDateCreation" prefWidth="150" text="Date création" />
                    <TableColumn fx:id="colonneFournisseur" prefWidth="150" text="Fournisseur" />
                    <TableColumn fx:id="colonneMontant" prefWidth="100" text="Montant (€)" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="btnConfirmerSelection" disable="true" onAction="#confirmerCommandeSelectionnee" text="Confirmer la commande sélectionnée" />
            </HBox>
        </VBox>

        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Détails et impact sur les stocks" />
            <TableView fx:id="tableLignesCommande" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colonneMedicament" prefWidth="150" text="Médicament" />
                    <TableColumn fx:id="colonneQuantite" prefWidth="70" text="Quantité" />
                    <TableColumn fx:id="colonnePrixUnitaire" prefWidth="100" text="Prix unitaire (€)" />
                    <TableColumn fx:id="colonnePrixTotal" prefWidth="100" text="Prix total (€)" />
                    <TableColumn fx:id="colonneStockActuel" prefWidth="100" text="Stock actuel" />
                    <TableColumn fx:id="colonneStockApres" prefWidth="100" text="Stock après" />
                </columns>
            </TableView>
        </VBox>
    </SplitPane>

    <Label fx:id="lblStatut" style="-fx-font-style: italic;" text="Prêt" />
   <Button fx:id="approvisionnementButton" mnemonicParsing="false" onAction="#ouvrirApprovisionnement" text="Retour" />
</VBox>
