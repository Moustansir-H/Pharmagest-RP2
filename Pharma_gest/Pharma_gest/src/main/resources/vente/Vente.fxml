<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="mcci.businessschool.bts.sio.slam.pharmagest.vente.controleur.VenteControleur">

    <!-- Entête : Titre et bouton Retour -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Création de Vente (Pharmacien)"
                   style="-fx-font-size:16; -fx-font-weight:bold; -fx-padding:10;"/>
            <Button fx:id="retourDashboard" text="Retour" style="-fx-padding:8;"
                    onAction="#retourDashboardOnAction"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Sélection du type de vente -->
            <HBox spacing="10">
                <Label text="Type de vente :" style="-fx-font-weight:bold;"/>
                <ChoiceBox fx:id="choiceTypeVente">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="LIBRE"/>
                            <String fx:value="PRESCRITE"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </HBox>

            <!-- Section pour les informations du patient et de la prescription (cachée par défaut) -->
            <VBox fx:id="sectionPrescription" spacing="10" visible="false">
                <Label text="Informations du Patient" style="-fx-font-weight:bold;"/>

                <!-- 🔍 Ajout de la barre de recherche patient -->
                <HBox spacing="10">
                    <Label text="Rechercher patient :" style="-fx-font-weight:bold;"/>
                    <TextField fx:id="txtRecherchePatient" promptText="Entrez un nom..."/>
                    <Button text="Rechercher" onAction="#handleRechercherPatient"/>
                </HBox>

                <GridPane hgap="10" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPatientNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPatientPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Date de naissance :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="datePatientNaissance" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Adresse :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPatientAdresse" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Contact :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPatientContact" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <Label text="Informations de la Prescription" style="-fx-font-weight:bold;"/>
                <GridPane hgap="10" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Nom du médecin :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNomMedecin" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Date de prescription :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="datePrescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Barre de recherche des médicaments -->
            <HBox spacing="10">
                <Label text="Rechercher :" style="-fx-font-weight:bold;"/>
                <TextField fx:id="txtRecherche" promptText="Tapez un nom de médicament..."/>
            </HBox>

            <!-- Table des médicaments disponibles -->
            <Label text="Liste des Médicaments Disponibles" style="-fx-font-weight:bold;"/>
            <TableView fx:id="tableMedicaments" prefHeight="150">
                <columns>
                    <TableColumn fx:id="colMedNom" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="colMedForme" text="Forme" prefWidth="100"/>
                    <TableColumn fx:id="colMedStock" text="Stock Actuel" prefWidth="100"/>
                    <TableColumn fx:id="colMedPrixVente" text="Prix Vente" prefWidth="80"/>
                </columns>
            </TableView>

            <!-- Zone de saisie pour la quantité et bouton Ajouter -->
            <HBox spacing="10">
                <Label text="Quantité :"/>
                <TextField fx:id="txtQuantite" prefWidth="80"/>
                <Button text="Ajouter à la vente" onAction="#handleAjouterMedicament"/>
            </HBox>

            <!-- Table des lignes de vente -->
            <Label text="Lignes de Vente en Cours" style="-fx-font-weight:bold;"/>
            <TableView fx:id="tableLignesVente" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colVenteMedicament" text="Médicament" prefWidth="150"/>
                    <TableColumn fx:id="colVenteQuantite" text="Quantité" prefWidth="80"/>
                    <TableColumn fx:id="colVentePrixUnitaire" text="Prix Unitaire" prefWidth="80"/>
                    <TableColumn fx:id="colVenteSousTotal" text="Sous-total" prefWidth="80"/>
                </columns>
            </TableView>

            <!-- Montant total et bouton Valider -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Montant Total :" style="-fx-font-weight:bold;"/>
                <Label fx:id="lblMontantTotal" text="0.00" style="-fx-font-size:14;"/>
                <Button text="Valider la Vente" onAction="#handleValiderVente"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
