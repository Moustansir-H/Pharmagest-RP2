<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="mcci.businessschool.bts.sio.slam.pharmagest.vente.controleur.CaisseControleur"
            style="-fx-background-color: #f8f9fa;">

    <!-- En-tête moderne avec effet d'ombre et dégradé -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #2196F3, #1976D2); -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Caisse (Vendeur)" 
                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Retour" 
                        style="-fx-background-color: white; -fx-text-fill: #2196F3; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                        onAction="#handleRetour"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-padding: 20;">
            <HBox spacing="25" style="-fx-padding: 20;">
                <!-- Colonne de gauche -->
                <VBox spacing="25" style="-fx-min-width: 500;">
                    <!-- Section Ventes en attente -->
                    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="Ventes en attente de paiement" 
                               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 15 0;"/>
                        
                        <TableView fx:id="tableVentes" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                            <columns>
                                <TableColumn fx:id="colVenteId" text="ID Vente" prefWidth="100" style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colDateVente" text="Date" prefWidth="180" style="-fx-alignment: CENTER;"/>
                                <TableColumn fx:id="colMontantTotal" text="Montant Total" prefWidth="150" style="-fx-alignment: CENTER-RIGHT;"/>
                                <TableColumn fx:id="colNumeroFacture" text="Facture" prefWidth="180" style="-fx-alignment: CENTER;"/>
                            </columns>
                            <style>
                                -fx-table-cell-border-color: transparent;
                                -fx-selection-bar: #e3f2fd;
                                -fx-selection-bar-non-focused: #e3f2fd;
                            </style>
                        </TableView>
                    </VBox>

                    <!-- Section Paiement -->
                    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                        <Label text="Informations de Paiement" 
                               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 15 0;"/>
                        
                        <GridPane hgap="20" vgap="15" style="-fx-padding: 15;">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Montant reçu :" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #555;"/>
                            <TextField fx:id="txtMontantRecu" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                                      style="-fx-padding: 10; -fx-background-radius: 5;"/>

                            <Label text="Mode de paiement :" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #555;"/>
                            <TextField fx:id="txtModePaiement" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                                      promptText="Espèces, Carte..." style="-fx-padding: 10; -fx-background-radius: 5;"/>
                        </GridPane>

                        <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 15;">
                            <Button text="Valider le paiement" 
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                                    onAction="#handleValiderPaiement"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Colonne de droite - Calculatrice -->
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label text="Calculatrice" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 15 0;"/>
                    
                    <TextField fx:id="txtCalculatrice" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-background-radius: 5; -fx-font-size: 16; -fx-alignment: CENTER-RIGHT;"/>
                    
                    <GridPane hgap="5" vgap="5" style="-fx-padding: 10;">
                        <Button fx:id="btn7" text="7" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice"/>
                        <Button fx:id="btn8" text="8" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.columnIndex="1"/>
                        <Button fx:id="btn9" text="9" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.columnIndex="2"/>
                        <Button fx:id="btnDiv" text="÷" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.columnIndex="3"/>
                        
                        <Button fx:id="btn4" text="4" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="1"/>
                        <Button fx:id="btn5" text="5" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Button fx:id="btn6" text="6" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <Button fx:id="btnMult" text="×" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        
                        <Button fx:id="btn1" text="1" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="2"/>
                        <Button fx:id="btn2" text="2" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Button fx:id="btn3" text="3" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                        <Button fx:id="btnMinus" text="-" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                        
                        <Button fx:id="btn0" text="0" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="3"/>
                        <Button fx:id="btnDot" text="." style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Button fx:id="btnClear" text="C" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <Button fx:id="btnPlus" text="+" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
                        
                        <Button fx:id="btnEqual" text="=" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 15; -fx-background-radius: 5;" onAction="#handleCalculatrice" GridPane.rowIndex="4" GridPane.columnSpan="4" GridPane.hgrow="ALWAYS"/>
                    </GridPane>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>
</BorderPane>
