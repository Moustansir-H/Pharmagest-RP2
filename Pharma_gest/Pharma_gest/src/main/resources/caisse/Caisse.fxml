<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="mcci.businessschool.bts.sio.slam.pharmagest.vente.controleur.CaisseControleur">

    <!-- 🔝 En-tête : Titre + bouton retour -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Caisse (Vendeur)" style="-fx-font-size:16; -fx-font-weight:bold;"/>
            <Button fx:id="retourDashboard" text="Retour" onAction="#retourDashboardOnAction"/>
        </HBox>
    </top>

    <!-- 🧾 Centre avec 2 colonnes : Ventes à gauche, détails à droite -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- 📋 Table des ventes en attente -->
            <VBox spacing="10">
                <Label text="Ventes en attente de paiement" style="-fx-font-weight:bold;"/>
                <TableView fx:id="tableVentes" prefHeight="300" prefWidth="400">
                    <columns>
                        <TableColumn fx:id="colVenteId" text="ID Vente" prefWidth="80"/>
                        <TableColumn fx:id="colDateVente" text="Date" prefWidth="120"/>
                        <TableColumn fx:id="colMontantTotal" text="Montant" prefWidth="100"/>
                        <TableColumn fx:id="colNumeroFacture" text="Facture" prefWidth="100"/>
                        <TableColumn fx:id="colTypeVente" text="Type Vente" prefWidth="100"/> <!-- Nouvelle colonne -->
                    </columns>
                </TableView>
            </VBox>

            <!-- 📦 Détails de la vente sélectionnée -->
            <VBox spacing="10" alignment="TOP_LEFT" prefWidth="400">
                <Label text="Détails de la vente" style="-fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="5">
                    <Label text="ID Vente :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblIdVente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Type :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblTypeVente" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Date :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblDateVente" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Montant Total :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="lblMontantTotal" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- 💊 Liste des médicaments de la vente -->
                <Label text="Médicaments associés :" style="-fx-font-weight:bold;"/>
                <TableView fx:id="tableLignesVente" prefHeight="150">
                    <columns>
                        <TableColumn text="Nom" fx:id="colMedicamentNom" prefWidth="150"/>
                        <TableColumn text="Quantité" fx:id="colQuantite" prefWidth="100"/>
                        <TableColumn text="Prix U" fx:id="colPrixUnitaire" prefWidth="100"/>
                    </columns>
                </TableView>

                <!-- 💰 Saisie et calcul monnaie -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Montant reçu:"/>
                    <TextField fx:id="txtMontantRecu" prefWidth="100"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Identifiant du Caissier:"/>
                    <TextField fx:id="txtVendeurId" prefWidth="100"/>
                </HBox>


                <Label fx:id="lblMonnaie" text="Monnaie à rendre : 0.00 €" style="-fx-font-weight: bold;"/>

                <!-- ✅ Bouton validation -->
                <HBox alignment="CENTER_RIGHT">
                    <Button text="Valider le paiement" onAction="#handleValiderPaiement"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>
